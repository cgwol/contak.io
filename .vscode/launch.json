    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "perScriptSourcemaps": "auto",
            "preLaunchTask": "Start Dev Server In Background",
        },
        {
            "name": "Debug Build Process",
            "request": "launch",
            "type": "node-terminal",
            "command": "npx vite",
        },
    ],
}